<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <EditText
            android:id="@+id/etCodigoSistema"
            android:layout_width="271dp"
            android:layout_height="wrap_content"
            android:hint="codigoSistema"
            android:inputType="text" />

        <EditText
            android:id="@+id/etSistema"
            android:layout_width="271dp"
            android:layout_height="wrap_content"
            android:hint="Sistema Solar"
            android:inputType="text"
            android:minHeight="48dp" />

        <EditText
            android:id="@+id/etEdad"
            android:layout_width="271dp"
            android:layout_height="wrap_content"
            android:hint="Edad"
            android:inputType="text"
            android:minHeight="48dp" />
        <EditText
            android:id="@+id/etGalaxia"
            android:layout_width="271dp"
            android:layout_height="wrap_content"
            android:hint="Galaxia"
            android:inputType="text"
            android:minHeight="48dp" />
        <EditText
            android:id="@+id/etDescripcion"
            android:layout_width="271dp"
            android:layout_height="wrap_content"
            android:hint="Descripcion"
            android:inputType="text"
            android:minHeight="48dp" />

        <Button
            android:id="@+id/btnAddUpdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:background="@color/color"
            android:text="agregar"
            android:textColor="#212121" />

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvSistemas"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:listitem="@layout/item_rv_sistema" />

</LinearLayout>