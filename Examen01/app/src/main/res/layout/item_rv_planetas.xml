<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Planetas">

    <Button
        android:id="@+id/btnAgregarR"
        android:layout_width="74dp"
        android:layout_height="74dp"
        android:background="@drawable/round_button"
        android:text="+"
        android:textColor="@color/white"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.911"
         />

    <ImageButton
        android:id="@+id/btnEditR"
        android:layout_width="48dp"
        android:layout_height="55dp"
        android:layout_marginStart="40dp"
        android:contentDescription="@string/app_name"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="@+id/btnAgregarR"
        app:layout_constraintStart_toEndOf="@+id/btnAgregarR"
        app:layout_constraintTop_toTopOf="@+id/btnAgregarR"
        app:layout_constraintVertical_bias="0.421" />

    <ImageButton
        android:id="@+id/btnBorrarR"
        android:layout_width="58dp"
        android:layout_height="54dp"
        android:layout_marginEnd="40dp"
        android:contentDescription="@string/app_name"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="@+id/btnAgregarR"
        app:layout_constraintEnd_toStartOf="@+id/btnAgregarR"
        app:layout_constraintTop_toTopOf="@+id/btnAgregarR"
        app:layout_constraintVertical_bias="0.45" />

</androidx.constraintlayout.widget.ConstraintLayout>